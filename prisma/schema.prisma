generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Producto {
  id          Int       @id @default(autoincrement())
  nombre      String
  precio      Float
  imagen      String
  categoria   Categoria @relation(fields: [categoriaId], references: [id]) //vinculando modelos. Cada producto va a tener una categor√≠a
  categoriaId Int //hace referencia al id de cotegoria, y tiene que ser el mismo tipo de dato (int)
}

model Categoria {
  id        Int        @id @default(autoincrement())
  nombre    String
  icono     String
  productos Producto[] //arrays de producto porque cada categoria va a tener muchos productos
}

model Orden {
  id     Int     @id @default(autoincrement())
  nombre String
  fecha  String
  total  Float
  pedido Json
  estado Boolean @default(false)
}
